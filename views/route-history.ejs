<%- include('partials/header') %>

<div class="container py-5">
  <h2 class="text-center mb-5 fw-bold text-primary">My Saved Routes</h2>

  <% if (routes.length === 0) { %>
    <div class="alert alert-warning text-center fs-5">No saved routes yet.</div>
  <% } else { %>
    <div class="row g-4">
      <% routes.forEach(route => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow border-0 rounded-4 overflow-hidden">
            
            <% if (route.cityImageUrl) { %>
              <img src="<%= route.cityImageUrl %>" alt="<%= route.city %>" class="card-img-top object-fit-cover" style="height: 180px;">
            <% } else { %>
              <div class="bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center" style="height: 180px;">
                <i class="bi bi-image fs-1 text-muted"></i>
              </div>
            <% } %>

            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-primary fw-bold mb-2 text-truncate" title="<%= route.name %>">
                <i class="bi bi-geo-alt-fill me-2"></i><%= route.name %>
              </h5>
              <p class="card-text text-muted mb-3" style="min-height: 3.5rem;"><%= route.description || 'No description provided.' %></p>

              <ul class="list-unstyled mb-4 small text-secondary flex-grow-1">
                <li><strong>Trip Type:</strong> <%= route.tripType || 'N/A' %></li>
                <li><strong>City:</strong> <%= route.city || 'N/A' %></li>
                <li><strong>Distance:</strong> <%= route.distance %> km</li>
                <li class="text-muted fst-italic" style="font-size: 0.85rem;">
                  Created: <%= new Date(route.createdAt).toLocaleDateString() %>
                </li>
              </ul>

              <div class="d-flex gap-2 align-items-center">
                <a href="/view-route/<%= route._id %>" class="btn btn-primary flex-grow-1 rounded-pill d-flex align-items-center justify-content-center" 
                   title="View Route on Map">
                  <i class="bi bi-map me-2 fs-5"></i>
                  <span class="fw-semibold">View on Map</span>
                </a>
              
                <form action="/route-history/delete/<%= route._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this route?');" class="m-0 p-0">
                  <button type="submit" class="btn btn-outline-danger rounded-circle d-flex align-items-center justify-content-center" 
                          style="width: 44px; height: 44px;" title="Delete Route">
                    <i class="bi bi-trash fs-5"></i>
                  </button>
                </form>
              </div>
              
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <% if (totalPages > 1) { %>
      <nav aria-label="Page navigation example" class="mt-4">
        <ul class="pagination justify-content-center">

          <% if (currentPage > 1) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
          <% } else { %>
            <li class="page-item disabled">
              <span class="page-link" aria-hidden="true">&laquo;</span>
            </li>
          <% } %>

          <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>

          <% if (currentPage < totalPages) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= currentPage + 1 %>" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
          <% } else { %>
            <li class="page-item disabled">
              <span class="page-link" aria-hidden="true">&raquo;</span>
            </li>
          <% } %>

        </ul>
      </nav>
    <% } %>
  <% } %>
</div>
